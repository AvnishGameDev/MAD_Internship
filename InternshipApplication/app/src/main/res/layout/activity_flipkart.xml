<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="20dp" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flipkart (1)"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#0060FF"
                android:padding="10dp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="4dp"
                android:background="#0060FF" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grocery"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Minutes"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D0D0D0" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Hot Deal label -->
            <TextView
                android:id="@+id/hot_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot Deal"
                android:textColor="#008000"
                android:textStyle="bold"
                android:background="#e0f2e9"
                android:padding="4dp"
                android:textSize="12sp" />

            <!-- Horizontal section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Product image placeholder -->
                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:background="#f0f0f0" />

                <!-- Product details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/product_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FUDE PRIDE Loose Fit Men Dark Grey..."
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:maxLines="1" />

                    <!-- Size -->
                    <TextView
                        android:id="@+id/product_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size: 28, Size: NA"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginTop="2dp" />

                    <!-- Rating Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <!-- Star icon -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/btn_star_big_on"
                            android:layout_marginEnd="4dp" />

                        <!-- Rating -->
                        <TextView
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.9"
                            android:textSize="12sp" />

                        <!-- Rating count -->
                        <TextView
                            android:id="@+id/review_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" (985)"
                            android:textSize="12sp"
                            android:textColor="#555555"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <!-- Discount & Price -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†“80%"
                            android:textColor="#388e3c"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" â‚¹2,499"
                            android:layout_marginStart="6dp"
                            android:textColor="#9e9e9e"
                            android:textSize="12sp" />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="6dp"
                                android:background="#B0B0B0" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" â‚¹498"
                            android:layout_marginStart="6dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Coin and offers -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Or Pay â‚¹473 + ðŸ”¸25"
                        android:textSize="12sp"
                        android:textColor="#555555"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Offers Available"
                        android:textSize="12sp"
                        android:textColor="#008000"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Delivery -->
            <TextView
                android:id="@+id/delivery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery by Jun 23, Mon"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginTop="10dp" />

            <!-- Bottom buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#606060" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save for later"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#606060" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buy this now"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#606060" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/price_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_price_card"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Details"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- Price row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Price (1 item)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#555555" />

            <TextView
                android:text="â‚¹2,499"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Discount row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="Discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#555555" />

            <TextView
                android:text="-â‚¹2,001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008000"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Platform Fee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="Platform Fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#555555" />

            <TextView
                android:text="â‚¹4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Dotted Line Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#dddddd" />

        <!-- Total row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Total Amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:text="â‚¹502"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Savings banner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You will save â‚¹1,997 on this order"
            android:background="#e6f5ea"
            android:textColor="#008000"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <!-- Top bar: Price & Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Price -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹2,499"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#909090" />
                </FrameLayout>

                <TextView
                    android:id="@+id/final_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="502"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>

            <!-- Place Order Button -->
            <Button
                android:id="@+id/place_order_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place order"
                android:backgroundTint="#FFCC00"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:elevation="2dp"/>
        </LinearLayout>

        <!-- Bottom Nav -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="#FFFFFF"
            android:elevation="8dp">

            <!-- Home -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/ic_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Play -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_play"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Play"
                    android:textSize="12sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Categories -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_categories"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Categories"
                    android:textSize="12sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Account -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_account"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Account"
                    android:textSize="12sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Cart -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Cart"
                    android:textSize="12sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made by Avnish Kirnalli"
        android:textColor="#00A0FF"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>